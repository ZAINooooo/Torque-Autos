<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context="com.example.asim.customlistview.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutfirst"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout6"
            android:gravity="left"

            >
            <ImageView android:id="@+id/image_3"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout4"
            android:gravity="center"
            >
            <ImageView android:id="@+id/image_20"
                android:adjustViewBounds="true"
                android:layout_width="260dp"
                android:layout_height="66dp"

                android:src="@drawable/logo"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/imageView"
        android:layout_below="@+id/linearLayoutfirst" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Profile"
        android:id="@+id/textView4"
        android:singleLine="false"
        style="bold"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:src="@drawable/profilepic"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/Second"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5" />

    <View
        android:id="@+id/Second"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/image2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Text3"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/Second"
        android:layout_alignEnd="@+id/Second"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Text4"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/Text3"
        android:layout_alignStart="@+id/Text3"
        android:layout_alignRight="@+id/Text3"
        android:layout_alignEnd="@+id/Text3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller/Buyer"
        android:id="@+id/textView8"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Text5"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/Text4"
        android:layout_alignEnd="@+id/Text4"
         />
    <View
        android:id="@+id/Third2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignRight="@+id/Text5"
        android:layout_alignEnd="@+id/Text5" />

    <View
        android:id="@+id/Third"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interested in"
        android:id="@+id/textView9"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/image2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/textView10"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
