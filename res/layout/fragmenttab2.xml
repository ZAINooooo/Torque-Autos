<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.03"
        android:id="@+id/linearLayout2">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation ="horizontal"
        android:layout_weight="0.11"
        android:gravity="bottom"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:background="@drawable/back"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="Search use cars from"
            android:drawableLeft="@drawable/search2"
            android:background="#ffdeffee" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/radiofirst"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:background="@drawable/rbtn_selector"
            android:button="@null"
            android:checked="true"

            android:padding="5dp"
            android:textColor="@drawable/rbtn_textcolor_selector"
            android:text="                  ForkLift" />

        <RadioButton
            android:id="@+id/radioSecond"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rbtn_selector"
            android:button="@null"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:text="ForkLoader"
            android:textColor="@drawable/rbtn_textcolor_selector" />

    </RadioGroup>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listtab2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radioGroup1" />


</RelativeLayout>