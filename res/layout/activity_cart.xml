<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context="com.example.asim.customlistview.Wish">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutfirst">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout6"
            android:gravity="left"

            >
            <ImageView android:id="@+id/image_3"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout4"
            android:gravity="center"
            >
            <ImageView android:id="@+id/image_20"
                android:adjustViewBounds="true"
                android:layout_width="260dp"
                android:layout_height="66dp"

                android:src="@drawable/logo"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/imageView"
        android:layout_below="@+id/linearLayoutfirst" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView11"

        android:id="@+id/imageView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyCart"
        android:textStyle="bold"
        android:id="@+id/textView11"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:paddingLeft="10dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/listCart"

        android:layout_below="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textStyle="bold"
        android:id="@+id/textView27"
        android:layout_below="@+id/listCart"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Quantity"
        android:textStyle="bold"
        android:id="@+id/textView28"
        android:layout_below="@+id/textView27"
        android:layout_alignRight="@+id/button8"
        android:layout_alignEnd="@+id/button8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 20,000"
        android:textStyle="bold"
        android:id="@+id/textView42"
        android:layout_below="@+id/textView27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="CHECKOUT"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />


</RelativeLayout>
